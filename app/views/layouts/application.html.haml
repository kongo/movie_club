!!! 5
%html(lang="en")
  %head
    %meta(charset='utf-8')
    %title Movie Club
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield :javascript
  %body
    .container-fluid
      .navbar
        .navbar-inner
          .container
            = link_to "Movie Club", root_path, class: "brand"
            .nav-collapse
              %ul.nav
                - if user_signed_in?
                  - if current_user.is_admin?
                    %li
                      = link_to "Polls", admin_polls_path
              %ul.nav.pull-right
                - if user_signed_in?
                  %li
                    = link_to "Hello #{current_user.fullname}"
                  %li
                    = link_to "Log Out", destroy_user_session_path, :method => "delete"
                - else
                  %li
                    = link_to "Log In", users_sign_in_path

      - flash.each do |key, value|
        %div{class: flash_class(key) + " fade in"}= value
      = yield
